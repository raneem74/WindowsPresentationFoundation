<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



                    <LinearGradientBrush x:Key="BtnG" StartPoint="0,0"  EndPoint="0,1">
                        <GradientStop Color="lightgray" Offset=".5"></GradientStop>
                        <GradientStop Color="gray" Offset=".5"></GradientStop>
                    </LinearGradientBrush>
                    <Style    x:Key="btnstyle" TargetType="Button">
                        <Setter Property="Button.Content" Value="Click Me"></Setter>
                        <Setter Property="Button.FontFamily" Value="Arial"></Setter>
                        <Setter Property="Button.Margin" Value="5"></Setter>
                        <!--<Setter Property="Button.FontWeight" Value="Bold"></Setter>-->
                        <Setter Property="Button.Background" Value="{StaticResource ResourceKey=BtnG}"></Setter>

                    </Style>            
</ResourceDictionary>